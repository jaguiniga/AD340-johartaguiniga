<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple"
    tools:context=".Main2Activity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/textview2_padding"
        android:hint="Profile Name"
        android:text=""
        android:background="@android:color/darker_gray"
        android:textColor="@color/color_view2"
        android:textSize="@dimen/textsize_view2"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textView3"
        android:paddingTop="@dimen/textview3_paddingtop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textColor="@color/coloe_view3"
        android:textSize="@dimen/textsize_view3"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        android:hint="@string/profiles_tab"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/textView3"
        android:layout_centerInParent="true"
        android:background="@android:color/darker_gray"
        android:hint="@string/description"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textcolor_view4"
        android:textSize="@dimen/textview_textsize"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/color_view5"
        android:textSize="@dimen/textsize_view5"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/textView2"
        android:hint="@string/age_hint"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/color_view5"
        android:textSize="@dimen/textsize_view5"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:layout_centerInParent="true"
        android:hint="@string/email_hint"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/pic_width"
        android:layout_height="@dimen/pic_height"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/borgpic"
        />


</RelativeLayout>