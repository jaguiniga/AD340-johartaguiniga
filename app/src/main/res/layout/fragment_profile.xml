<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple"
    tools:context=".Main2Activity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@android:color/black"
        android:textColor="@color/color_view2"
        android:textSize="@dimen/textsize_view2"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textView3"
        android:paddingTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textColor="@color/coloe_view3"
        android:textSize="@dimen/textsize_view3"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="377dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="123dp"
        android:background="@android:color/darker_gray"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textcolor_view4"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/black"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/color_view5"
        android:textSize="@dimen/textsize_view5"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/textView2"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="337dp"
        android:layout_height="224dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/appbar"
        app:srcCompat="@drawable/borgpic"
        android:contentDescription="TODO" />


</RelativeLayout>